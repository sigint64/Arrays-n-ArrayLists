//To use array lists, import the utility.
import java.util.ArrayList;

public class DifferenceArraysArrayLists
{
    public static void printArray(int[] arry)
    {
        System.out.print("Array elements: ");
        for(int element : arry)
        {
            System.out.print(element + " ");
        }
        System.out.println();
    }
    public static void main(String args[])
    {
        //***Arrays***//
        int[] anArray = { 1, 5, 10, 15 };

    //***Adding an element to an array
        //Since the array size is already four, we cannot add to it.
        //We must create a new array to accomodate the new value.

        int[] newArray = new int[anArray.length + 1];
        for(int i = 0; i < anArray.length; i++)
        {
            newArray[i] = anArray[i];
        }
        newArray[4] = 20;
        printArray(newArray);

    //***Removing an element
        //To remove an element, we create a new, smaller array.

        int[] finalArray = new int[newArray.length - 1];
        for(int i = 0; i < finalArray.length; i++)
        {
            finalArray[i] = newArray[i];
        }
        printArray(finalArray);

        //***Array lists***//
        ArrayList<Integer> list = new ArrayList<Integer>();

    //***Adding an element
        //Call the .add() method to add an element.
        list.add(100);
        for(int i = 1; i < 6; i++)
        {
            list.add(list.get(i - 1) + 25);
        }
        System.out.print("Array list elements: ");
        System.out.print(list);

    //***Removing an element
        //Call the .remove() method to remove an element.

        list.remove(5);
        System.out.print("\nArray list elements: ");
        System.out.print(list);
    }
}
